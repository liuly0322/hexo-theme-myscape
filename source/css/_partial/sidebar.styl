if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 1em
  ul, ol
    list-style: none
    line-height: 1.8rem
    margin: 0
    ul, ol
      line-height: 1.8rem
      margin: 0 1em

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  box-shadow: none
  text-align: center
  line-height: 2
  a
    margin: 0 10px 20px
    display: inline-block
    border-bottom: 1px solid #999;
    word-wrap: break-word;

.oneword-refresh
  cursor: pointer
  border: 0px
  background: #eee
  position: relative
  float: right
  bottom: 2em
  margin-right: 5px
  &:before
    content: "\f021"
    font-family: font-icon
    font-size: 1em

.toc-list
  padding: 0 !important
#menu-wrap.toc-fixed
  position: fixed
  top: calc(1em - 50px)
  margin-right: 20px
  width: 23%
  max-width: 285px
#menu-wrap.toc-fixed-phone
  position: fixed
  font-size: 1.2em
  line-height: 1.2em
  top: 10%
  left: 20%
  width: 60%
  background: #191919
  .widget-title
    margin: 1em
    color: #fff
#menu-wrap 
  .menu-box
    position: relative
    overflow: hidden