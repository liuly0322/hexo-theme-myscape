// Colors
DM-grey = #212121
DM-black = #191919
DM-font-color = #aaa

#dark-btn
  border: none
  background: #f9f9f9
  border-top-left-radius: 50%
  border-bottom-left-radius: 50%
  border-top-right-radius: 0
  border-bottom-right-radius: 0
  top: 150px
  right: -2px
  width: 40px
  padding: 12px 15px
  position: fixed
  &:before
    content: "\f185"
    font-family: font-icon
    font-size: 14px

.dark-theme
    body
        background-color: DM-black
    #wrap
        background-color: DM-black
    .widget
        background-color: DM-grey
        box-shadow: none
        color: DM-font-color
        border: 0
        a
            color: DM-font-color
    .widget-title
        text-shadow: none
        color: DM-font-color
    .oneword-refresh
        background-color: DM-black
        color: DM-font-color
    .article-category,.article-date
        text-shadow: none
        color: DM-font-color
        .article-category-link
            text-shadow: none
            color: DM-font-color
    .article-inner,.archive-article-inner
        background-color: DM-grey
        border: 0
        box-shadow: none
        .tags a
            color: DM-font-color
    .article-title,.archive-article-title
        color: DM-font-color
    .article-entry
        color: DM-font-color
        code,.tip
            background-color: #353535
    #comments
        box-shadow: none
        border: 0
        background-color: DM-grey
        color: DM-font-color
        pre
            background-color: #353535
            code
                color: DM-font-color
        .vat
            color: DM-font-color
    #dark-btn
        background-color: #252525
        color: DM-font-color
        &:before
            content: '\f186'
    #banner
        background: url("images/banner-dark.jpg") center #000
        background-size: cover
    #footer
        background: #252525
    .local-search-popup
        background: DM-grey
        a,#no-result
            color: DM-font-color
        .search-keyword
            color: #66ccff