#sidebar
  @media mq-normal
    column(sidebar-column)
  @media mq-wide
    max-width: 285px;

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  @extend $block
  color: #000
  padding: 15px
  a
    text-decoration: none
    color: #000
    &:hover
      color: color-link