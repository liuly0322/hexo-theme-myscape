#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  color: #000
  background: #fff
  border: 1px solid color-widget-border
  padding: 15px
  border-radius: 3px
  a
    text-decoration: none
    color: #000
    &:hover
      color: color-link
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
      
.widget_in_article
  padding-top: 8px
  padding-left: 15px
  padding-right: 15px
  a
    text-decoration: none
    color: #000
    &:hover
      color: color-link
  li
    float: left
    margin-bottom: 16px
    margin-left: 8px
    margin-right: 8px
