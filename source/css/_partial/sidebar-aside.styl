#sidebar
  @media mq-normal
    column(sidebar-column)
  @media mq-wide
    width: 17.333333333333332%

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  @extend $block
  color: #000
  padding: 15px
  a
    text-decoration: none
    color: #000
    &:hover
      color: color-link
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
      
.tags
  padding-top: 8px
  padding-left: 15px
  padding-right: 15px
  a
    text-decoration: none
    color: #000
    &:hover
      color: color-link
  li
    float: left
    margin-bottom: 16px
    margin-left: 8px
    margin-right: 8px
